root = true
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4
[*.md]
# double whitespace at end of line
# denotes a line break in Markdown
indent_size = off
trim_trailing_whitespace = false
[{*.yml,*.yaml,*.toml}]
indent_size = 2
trim_trailing_whitespace = false
[Makefile*]
indent_style = tab
indent_size = 4
[{*.tf*,*.hcl}]
indent_style = space
indent_size = 2
